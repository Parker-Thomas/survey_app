<%= form_for(@response) do |f| %>

  <%= if @response.question.question_type == short answer  %>
  <div class="field"><br>
    <%= f.label :response %><br>
    <%= f.text_field :name %>
    <%= f.hidden_field :question_id, :value=> question_id %>
  </div>

  <div class="actions">
    <%= button_tag "save question", class: "btn" %>
  </div>
<% end %>
