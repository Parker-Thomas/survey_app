<label id="notice"><%= notice %></label>

<label>
  <strong>Title:</strong>
  <%= @survey.title %>
</label>

<label>
  <strong>Description:</strong>
  <%= @survey.description %>
</label>

<label>
  <strong>Author:</strong>
  <%= @survey.author.name %>
</label>


<% @survey.questions.each do |q| %>
  <% if q.question_type_id == 3 %>
    <%= form_for(@response) do |r| %>
      <div class="field">
        <%= q.text %><br/>
        <%= r.label :name, "Yes", :value => "yes"  %>
        <%= r.radio_button :name, "yes" %>
        <%= r.label :name, "No", :value => "no" %>
        <%= r.radio_button :name, "no", :checked => true %>
        <%= r.hidden_field :question_id, :value=> q.id%>
      </div>
      <div class="actions">
        <%= r.submit class: "btn" %>
      </div>
    <%end%>
  <%end%>
  <% if q.question_type_id == 2 %>
  <p> this is short answer</p>

<%end%>
<% if q.question_type_id == 4 %>
  <p> this is yes no</p>

<%end%>
<% if q.question_type_id == 1 %>
  <p> this is long answer</p>

<%end%>

<% end %>

<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', authors_path %>
